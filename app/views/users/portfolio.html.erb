<h1>Porfolio</h1>
<table>
  <tr>
    <th>Symbol</th>
    <th>Company Name</th>
    <th>Exchange</th>
    <th>Industry</th>
    <th>CEO</th>
    <th>Security Name</th>
    <th>Issue Type</th>
    <th>Sector</th>
    <th>Employees</th>
    <th>Tags</th>
  </tr>
  <% @portfolio_companies.each do |symbol, company| %>
    <% stock = @stocks.detect {|stock| stock.symbol == symbol} %>
    <tr>
      <td>
        <%= link_to symbol, URI::HTTP.build({host: company["website"].sub(/^http[s]*:\/\/*/, '').sub(/\//, ""), protocol: "https"}).to_s, target: "_blank" %>
      </td>
      <td>
        <%= company["companyName"] %>
      </td>
      <td><%= company["exchange"] %></td>
      <td><%= company["industry"] %></td>
      <td><%= company["CEO"] %></td>
      <td><%= company["securityName"] %></td>
      <td><%= company["issueType"] %></td>
      <td><%= company["sector"] %></td>
      <td><%= company["employees"] %></td>
      <td><%= company["tags"].join(", ") %></td>
      <td><%= link_to "Trade", new_stock_transaction_path(stock) %></td>
    </tr>
  <% end %>
</table>
